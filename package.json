{
  "name": "mcp-invoice-express",
  "version": "1.0.0",
  "description": "Production-grade MCP server for InvoiceExpress API integration",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "mcp-invoice-express": "./dist/index.js"
  },
  "scripts": {
    "dev": "nodemon --exec tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "pre-commit": "npm run typecheck && npm run lint && npm run test",
    "prepare": "husky install"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "invoice-express",
    "ai-tools",
    "typescript"
  ],
  "author": "andreagroferreira",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.6.7",
    "zod": "^3.22.4",
    "winston": "^3.11.0",
    "dotenv": "^16.4.1",
    "node-cache": "^5.1.2",
    "p-limit": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@types/jest": "^29.5.11",
    "typescript": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.6.3",
    "prettier": "^3.2.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.0",
    "nodemon": "^3.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}